#===================================Abstract submission===================================================
<Abstract>:
    GridLayout:
        size_hint: (1, 1)
        cols: 2
        StackLayout:
            cols: 1
            orientation: 'tb-lr'
            size_hint: (.5, 1)
            spacing: 2
            padding: 2
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: 'icons/second.png'
            Label:
                text: 'Abstract Submission Form'
                size_hint: (1, .1)
                text_align: 'center'
                color: [.3, .6, .5, 1]
                bold: True
                font_size: 18
            StrokebTextInput:
                id: full_names
                multline: False
                height: '20dp'
                size_hint:(1, .1)
                hint_text: 'Full names'
                use_bubble: True
            StrokebTextInput:
                id: phone_number
                multline: False
                height: '20dp'
                size_hint:(1, .1)
                hint_text: 'Phone number'
                use_bubble: True
            StrokebTextInput:
                id: country
                multline: False
                height: '20dp'
                size_hint:(1, .1)
                hint_text: 'Country'
                use_bubble: True
            StrokebTextInput:
                id: email_address
                multline: False
                height: '20dp'
                size_hint:(1, .1)
                hint_text: 'email_address'
                use_bubble: True
            StrokebTextInput:
                id: institution
                multline: False
                height: '20dp'
                size_hint:(1, .1)
                hint_text: 'Institution'
                use_bubble: True
            Stroke:
                id: speciality
                size_hint:(1, .07)
                text: 'Click to chose your speciality'
                text_color: [0,1,1,0]
                values: ['Food and Nutrition Security', 'Maternal, Child Health and Nutrition', 'Societal Dynamics: Technology, Culture, Language and Crime']

            Stroke:
                id: company size
                size_hint:(1, .07)
                text: 'Company size '
                text_color: [0,1,1,0]
                values: ['0-10', '10-500', '500-10000', '10000-100000']
            StrokebTextInput:
                id: institution
                multline: False
                height: '20dp'
                size_hint:(1, .1)
                hint_text: 'Page Title'
                use_bubble: True

        GridLayout:
            rows: 2
            size_hint: (.5, 1)
            spacing: 3
            padding: 3
            orientation: 'horizontal'
            canvas.before:
                Rectangle:
                    size: self.pos
                    pos: self.pos
                    source: 'icons/second.png'
            StrokebTextInput:
                id: institution
                multline: False
                height: '20dp'
                size_hint:(.4, .4)
                hint_text: 'Abstract'
                use_bubble: True
            StackLayout:
                size_hint: (1, .1)
                spacing: 3
                padding: 3
                cols: 2
                orientation: 'rl-tb'
                canvas.before:
                    Rectangle:
                        size: self.pos
                        pos: self.pos
                        source: 'icons/second.png'
                SmoothButton:
                    id: submit
                    text: 'Submit'
                    size_hint: (.5, .5)
                    font_size: 20
                    bold: True
                SmoothButton:
                    id: reset
                    text: 'Reset'
                    size_hint: (.5, .5)
                    bold: True
                    font_size: 20





